<script>
// Flowers
for(let i=0;i<40;i++){
  let f=document.createElement("div");
  f.className="flower";
  f.style.left=Math.random()*100+"%";
  f.style.bottom=Math.random()*25+"%";

  let petals=3+Math.floor(Math.random()*2);
  for(let p=0;p<petals;p++){
    let pet=document.createElement("div");
    pet.className="petal";
    pet.style.transform=`rotate(${p*(360/petals)}deg) translate(0,-10px)`;
    pet.style.background=["red","yellow","pink"][Math.floor(Math.random()*3)];
    f.appendChild(pet);
  }
  let c=document.createElement("div");
  c.className="center";
  f.appendChild(c);
  document.body.appendChild(f);
}

// Show letter
setTimeout(()=>{
  document.getElementById("letter").style.display="block";
},9000);

// Fireworks
function yes(){
  musicHappy();
  for(let i=0;i<50;i++){
    let fw=document.createElement("div");
    fw.className="firework";
    fw.style.left="50%";
    fw.style.top="50%";
    fw.style.setProperty("--x",(Math.random()*400-200)+"px");
    fw.style.setProperty("--y",(Math.random()*400-200)+"px");
    document.body.appendChild(fw);
    setTimeout(()=>fw.remove(),1000);
  }
}

// Sad
function no(){
  musicSad();
  document.getElementById("letter").innerHTML="üò¢üíî";
}

// üéµ MUSIC (Generated by code)
const audioCtx=new (window.AudioContext||window.webkitAudioContext)();

function musicHappy(){
  playTone(523,0.3); playTone(659,0.6); playTone(784,0.9);
}
function musicSad(){
  playTone(392,0.3); playTone(330,0.6);
}
function playTone(freq,time){
  let osc=audioCtx.createOscillator();
  let gain=audioCtx.createGain();
  osc.frequency.value=freq;
  osc.type="sine";
  osc.connect(gain);
  gain.connect(audioCtx.destination);
  osc.start();
  gain.gain.exponentialRampToValueAtTime(0.0001,audioCtx.currentTime+time);
  osc.stop(audioCtx.currentTime+time);
}

// Start audio on first click
document.addEventListener("click",()=>audioCtx.resume(),{once:true});
</script>

